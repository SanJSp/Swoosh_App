<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.WelcomeActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/background_image"/>
    <ImageView
            android:layout_width="116dp"
            android:layout_height="39dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="147dp" app:layout_constraintHorizontal_bias="0.5"
            android:scaleType="fitCenter" android:contentDescription="@string/app_logo"/>
    <TextView
            android:text="@string/go_all_in"
            android:layout_width="314dp"
            android:layout_height="72dp"
            android:id="@+id/textView" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white" android:textAlignment="center"
            android:textSize="60sp" android:fontFamily="@font/montserrat"/>
    <TextView
            android:text="@string/on_going_all_out"
            android:layout_width="311dp"
            android:layout_height="57dp"
            android:id="@+id/textView2" android:textColor="@android:color/white"
            android:textStyle="bold" android:singleLine="false" android:textSize="28sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:fontFamily="@font/montserrat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:id="@+id/getStartedButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:fontFamily="@font/montserrat" android:textStyle="bold" android:textSize="18sp"
            android:background="@drawable/swoosh_button" android:textColor="@android:color/white"/>
    <TextView
            android:layout_width="218dp"
            android:layout_height="62dp"
            android:id="@+id/textView3"
            tools:text="Find a team in your City and dominate the field!" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="@android:color/white"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:singleLine="false"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.497" android:textSize="18sp"
            android:fontFamily="@font/montserrat" android:text="@string/find_a_team_in_your_city_and_dominate_the_field"/>
</android.support.constraint.ConstraintLayout>